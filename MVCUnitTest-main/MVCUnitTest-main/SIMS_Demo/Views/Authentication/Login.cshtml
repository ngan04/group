@model User

@using (Html.BeginForm("Login", "Authentication", FormMethod.Post))
{
    <div class="form-group">
        @Html.LabelFor(m => m.Name)
        @Html.TextBoxFor(m => m.Name, new { placeholder = "User Name", Class = "form-control" })
    </div>


    <div class="form-group">
        @Html.LabelFor(m => m.Pass)
        @Html.TextBoxFor(m => m.Pass, new { placeholder = "Password", Class = "form-control" })
    </div>
    <div style="color:red">
          @ViewBag.error
    </div>

    <br />
   <input type="submit" value="Login" class="btn btn-primary" />
    
    
}