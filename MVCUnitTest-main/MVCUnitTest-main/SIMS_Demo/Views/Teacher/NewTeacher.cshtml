@model Teacher


@using (Html.BeginForm("NewTeacher", "Teacher", FormMethod.Post))
{
    <div class="form-group">
        @Html.LabelFor(m => m.Name)
        @Html.TextBoxFor(m => m.Name, new {placeholder="Teacher's Name", Class = "form-control" })
    </div>
   

    <div class="form-group">
        @Html.LabelFor(m => m.DoB)
        @Html.TextBoxFor(m => m.DoB, new { placeholder = "Teacher's birthday", Class = "form-control" })
    </div>
    <input type="submit" value="Create" class="btn btn-success" />
}